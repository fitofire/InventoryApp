@model ComputerEntry

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card border-secondary mb-3">
                <div class="card-header">
                    <h2>Delete Computer</h2>
                </div>
                <div class="card-body">
                    <form asp-controller="ComputerEntries" asp-action="Delete" method="post">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-group mb-3">
                            <label asp-for="AssetTag" class="form-label">Asset Tag</label>
                            <input asp-for="AssetTag" class="form-control" placeholder="Enter an asset tag" />
                            <span asp-validation-for="AssetTag" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="SerialName" class="form-label">Serial Name</label>
                            <input asp-for="SerialName" class="form-control" placeholder="Enter the serial number" />
                            <span asp-validation-for="SerialName" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="Manufacturer" class="form-label">Manufacturer</label>
                            <input asp-for="Manufacturer" class="form-control" placeholder="Enter manufacturer name" />
                            <span asp-validation-for="Manufacturer" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="Model" class="form-label">Model</label>
                            <input asp-for="Model" class="form-control" placeholder="Enter the model" />
                            <span asp-validation-for="Model" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="PurchaseDate" class="form-label">Purchase Date</label>
                            <input asp-for="PurchaseDate" class="form-control" type="date" />
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="WarrantyExp" class="form-label">Warranty Expiration Date</label>
                            <input asp-for="WarrantyExp" class="form-control" type="date" />
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="Location" class="form-label">Location</label>
                            <input asp-for="Location" class="form-control" placeholder="Enter the location" />
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="CurrentUser" class="form-label">Current User</label>
                            <input asp-for="CurrentUser" class="form-control" placeholder="Enter the current user" />
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="Status" class="form-label">Status</label>
                            <input asp-for="Status" class="form-control" placeholder="Enter a status, is it checked in, checkout out, decommissioned" />
                            <span asp-validation-for="Status" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="LastUpdated" class="form-label">Last Updated</label>
                            <input asp-for="LastUpdated" class="form-control" type="date" />
                        </div>
                        <div class="d-flex justify-content-between">
                            <button type="submit" class="btn btn-primary">Delete</button>
                            <a asp-controller="ComputerEntries" asp-action="Index" class="btn btn-danger">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}